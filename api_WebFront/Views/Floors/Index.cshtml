@model List<Floor>


<h3>Floors</h3>
<div class="text-danger" asp-validation-summary="All"></div>
@if(Model != null) 
{
<br/>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Color</td>
            <td>Description</td>
            <td>Price</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach(var floor in Model)
        {
            <tr>
                <td>@floor.FloorName</td>
                <td>@floor.FloorColor</td>
                <td>@floor.FloorDescription</td>
                <td>@(floor.Price.HasValue? floor.Price.Value.ToString("c") : "")</td>
                <td><a class="btn btn-link" asp-controller="Floors" asp-action="UpdateFloor" asp-route-floorId="@floor.FloorId">Edit</a></td>
                <td><a class="btn btn-link" asp-controller="Floors" asp-action="DeleteFloor" asp-route-floorId="@floor.FloorId">Delete</a></td>
            </tr>
        }
    </tbody>

</table>
<br />
}
<a class = "btn btn-primary" asp-controller="Floors" asp-action="CreateFloor">Create</a>
